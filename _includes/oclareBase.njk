<html lang="en">
    <head>
    <!-- Metas -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Title -->
    <title> OCLaRE 
    {% if title %}
        - {{ title }}    
    {% endif %}</title>

    <!-- Favicon -->
    <link rel="icon"
        type="image/png"
        href="/pub-static/images/oclare_icon.ico">

    <!-- CSS Links-->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <link rel="stylesheet" href="/pub-static/css/OCLaRE-Theme-CSS.css">


    <!-- OpenGraph (Facebook, Linkedin, Twitter, etc...) -->
    <meta property="og:title" content="OCLaRE - Online Collaborative Lab Reporting Environment" />
    <meta property="og:type" content="website" />
    <meta property="og:description" content="OCLaRE is a web-based application that enhances the production of a lab report by offering tools for gathering information, planning, analyzing and writing collaborative lab reports. Teachers may customize a lab report by specifying the sections to be included in the report, the type of data to be entered, how the data may be analyzed, identifying the sections of the report that the students are to complete." />
    <meta property="og:image" content="/pub-static/images/social/open-graph.png" />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />

    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
    <script async src="https://identity.netlify.com/v1/netlify-identity-widget.js"></script>    
    </head>
    <body>
        <div class="layout" id="home">
            <!--Left-->
            <div id="left">
                <div id="left-background"></div>
            </div>
            <!--Main-->
            <div class="oclare-background-default relative-position" id="main-content">
                {{content | safe}}
                <!--Footer Area-->
                {% include "partials/footer.njk" %}
            </div>
            <!--Right-->
            <div id="right">
                <div id="right-background"></div>
            </div>
        </div>
        <script>
        var lastKeypress
        document.body.onkeydown = function(e) {
            console.log(e.keyCode)
            if(lastKeypress == 27 && e.keyCode == 27){
                e.preventDefault()
                window.location = "/edit"
            }
            lastKeypress = e.keyCode
        }
        </script>
    </body>    
</html>
